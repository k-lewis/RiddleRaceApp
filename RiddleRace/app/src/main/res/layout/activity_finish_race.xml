<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ec327.riddlerace.FinishRace"
    android:textAlignment="center"
    android:background="#FDF3E7">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Congratulations!You've completed the Race!"
                android:id="@+id/textView7"
                android:textSize="43sp"
                android:textColor="#C63D0F"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Choose pictures"-->
                <!--android:id="@+id/choose"-->
                <!--android:background="#7E8F7C"-->
                <!--android:textColor="#3B3738"-->
                <!--android:layout_below="@+id/textView7"-->
                <!--android:layout_centerHorizontal="true" />-->

            <ImageView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo1"
                android:layout_below="@+id/textView7"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo2"
                android:layout_below="@+id/photo1"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo3"
                android:layout_below="@+id/photo2"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo4"
                android:layout_below="@+id/photo3"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo5"
                android:layout_below="@+id/photo4"/>

            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo6"
                android:layout_below="@+id/photo5"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo7"
                android:layout_below="@+id/photo6"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo8"
                android:layout_below="@+id/photo7"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo9"
                android:layout_below="@+id/photo8"/>
            <ImageView
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/photo10"
                android:layout_below="@+id/photo9"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Menu"
                android:id="@+id/mainMenu"
                android:background="#7E8F7C"
                android:textColor="#3B3738"
                android:layout_below="@+id/photo10"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>