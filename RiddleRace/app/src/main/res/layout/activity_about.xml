<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ec327.riddlerace.AboutActivity"
    android:background="#FDF3E7">
<TextView
    android:text="About: Riddle Race"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30sp"
    android:layout_gravity="center_horizontal"
    android:gravity="center|center_horizontal"
    android:layout_centerHorizontal="true"
    android:id="@+id/textView4"
    android:textColor="#C63D0F" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Creators:"
    android:id="@+id/textView5"
    android:textSize="20sp"
    android:layout_below="@+id/textView4"
    android:layout_gravity="center_horizontal"
    android:gravity="center|center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:textColor="#3B3738" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Zach Chapasko"
    android:textSize="16sp"
    android:id="@+id/textView6"
    android:layout_below="@+id/textView5"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="6dp"
    android:textColor="#C63D0F" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Katie Lewis"
    android:textSize="16sp"
    android:id="@+id/textView7"
    android:layout_below="@+id/textView6"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-3dp"
    android:textColor="#C63D0F" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Inna Turshudzhyan"
    android:textSize="16sp"
    android:id="@+id/textView8"
    android:layout_below="@+id/textView7"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-3dp"
    android:textColor="#C63D0F" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="About:"
    android:textSize="20sp"
    android:id="@+id/textView9"
    android:layout_below="@+id/textView8"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textColor="#3B3738" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="This app was created by undergraduate engineering students at Boston University for the Introduction to Software Engineering course, EC327. The app is a scavenger hunt game in which players follow hints to get a full tour of the BU campus. The app calls you by name, challenges you with brain-wracking riddles, senses your location, and even allows you to document your experience with the camera. Do you think you can solve all of the hints? Go back and play Riddle Race now!"
    android:textSize="14sp"
    android:id="@+id/textView10"
    android:layout_below="@+id/textView9"
    android:layout_gravity="center_horizontal"
    android:gravity="center|center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="6dp"
    android:textColor="#C63D0F" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Current Version: 1.0"
    android:textSize="14sp"
    android:id="@+id/textView11"
    android:layout_below="@+id/textView10"
    android:layout_gravity="center_horizontal"
    android:gravity="center|center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:textColor="#3B3738" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Released: 12/9/2014"
    android:textSize="14sp"
    android:id="@+id/textView12"
    android:layout_below="@+id/textView11"
    android:layout_gravity="center_horizontal"
    android:gravity="center|center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="1dp"
    android:textColor="#3B3738" />

</RelativeLayout>